{
  "summary": "Languages",
  "description": "Languages for translations of API resource information.",
  "parameters": [
    {
      "$ref": "../components/parameters/nameOrId.json"
    }
  ],
  "get": {
    "operationId": "getLanguage",
    "tags": ["Utility"],
    "responses": {
      "200": {
        "description": "A Language object.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/Language.json"
            },
            "example": {
              "id": 1,
              "name": "ja",
              "official": true,
              "iso639": "ja",
              "iso3166": "jp",
              "names": [
                {
                  "name": "Japanese",
                  "language": {
                    "name": "en",
                    "url": "https://pokeapi.co/api/v2/language/9/"
                  }
                }
              ]
            }
          }
        }
      }
    }
  }
}
