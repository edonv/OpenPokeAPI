{
  "openapi": "3.1.0",
  "info": {
    "version": "2",
    "title": "PokéAPI",
    "description": "A Pokémon API."
  },
  "servers": [
    {
      "url": "https://pokeapi.co/api/v2",
      "description": "Base URL for the API."
    }
  ],
  "security": [],
  "externalDocs": {
    "url": "https://pokeapi.co/docs/v2"
  },
  "paths": {
    "/{endpoint}": {
      "$ref": "paths/{endpoint}.json"
    },
    "/berry/{nameOrId}": {
      "$ref": "paths/berry_{nameOrId}.json"
    },
    "/berry-firmness/{nameOrId}": {
      "$ref": "paths/berry-firmness_{nameOrId}.json"
    },
    "/berry-flavor/{nameOrId}": {
      "$ref": "paths/berry-flavor_{nameOrId}.json"
    },
    "/contest-type/{nameOrId}": {
      "$ref": "paths/contest-type_{nameOrId}.json"
    }
  }
}